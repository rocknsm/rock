apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: es-master
  labels:
    component: elasticsearch
    role: master
spec:
  replicas: 1
  template:
    metadata:
      labels:
        component: elasticsearch
        role: master
    spec:
      initContainers:
      - name: init-sysctl
        image: busybox:1.27.2
        command:
        - sysctl
        - -w
        - vm.max_map_count=262144
        securityContext:
          privileged: true
      containers:
      - name: es-master
        image: {{ elastic_container }}:{{ elastic_ver }}
        env:
        - name: NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: NODE_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: CLUSTER_NAME
          value: {{ es_cluster_name }}
        - name: NUMBER_OF_MASTERS
          value: "1"
        - name: NODE_MASTER
          value: "true"
        - name: NODE_INGEST
          value: "false"
        - name: NODE_DATA
          value: "false"
        - name: HTTP_ENABLE
          value: "false"
        - name: ES_JAVA_OPTS
          value: -Xms{{ es_mem }}g -Xmx{{ es_mem }}g
        ports:
        - containerPort: {{ elastic_data_port }}
          name: http
        - containerPort: {{ elastic_management_port }}
          name: transport
        livenessProbe:
          tcpSocket:
            port: transport
        volumeMounts:
        - name: {{ elastic_pv_data }}
          mountPath: {{ elastic_pv_data_path }}
{% for item in ['elasticsearch.yml','jvm.options','log4j2.properties'] %}
        - name: {{ elastic_config_map }}-{{ loop.index0 }}
          mountPath: {{ elastic_config_path }}/{{ item }}
          subPath: {{ item }}
{% endfor %}
      volumes:
      - name: {{ elastic_pv_data }}
        scaleIO:
          gateway: {{ scaleio_gateway_url }}
          system: scaleio
          protectionDomain: {{ scaleio_pd_name }}
          storagePool: {{ scaleio_sp_name }}
          volumeName: {{ elastic_vol_name }}
          secretRef:
            name: sio-secret
          fstype: xfs
{% for i in range(3) %}
      - name: {{ elastic_config_map }}-{{ i }}
        configMap:
          name: {{ elastic_config_map }}-{{ i }}
{% endfor %}
      nodeSelector:
        role: sensor
      affinity:
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
          - labelSelector:
              matchExpressions:
              - key: role
                operator: In
                values:
                - server
            topologyKey: "kubernetes.io/hostname"
