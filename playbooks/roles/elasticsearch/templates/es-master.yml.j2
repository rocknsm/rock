apiVersion: apps/v1beta1
kind: StatefulSet
metadata:
  name: es-master
spec:
  selector:
    matchLabels:
      component: elasticsearch
      role: master
  serviceName: "elasticsearch"
  replicas: 2
  template:
    metadata:
      labels:
        component: elasticsearch
        role: master
    spec:
      initContainers:
      - name: init-sysctl
        image: busybox:1.27.2
        command:
        - sysctl
        - -w
        - vm.max_map_count=262144
        securityContext:
          privileged: true
      containers:
      - name: es-master
        image: {{ elastic_container }}:{{ elastic_ver }}
        env:
        - name: NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: NODE_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: CLUSTER_NAME
          value: {{ es_cluster_name }}
        - name: NUMBER_OF_MASTERS
          value: "1"
        - name: NODE_MASTER
          value: "true"
        - name: NODE_INGEST
          value: "false"
        - name: NODE_DATA
          value: "false"
        - name: HTTP_ENABLE
          value: "false"
        - name: ES_JAVA_OPTS
          value: -Xms{{ es_mem }}g -Xmx{{ es_mem }}g
        ports:
        - containerPort: {{ elastic_data_port }}
          name: http
        - containerPort: {{ elastic_management_port }}
          name: transport
        livenessProbe:
          tcpSocket:
            port: transport
        volumeMounts:
        - name: elastic-data
          mountPath: {{ elastic_pv_data_path }}
        - name: elastic
          mountPath: {{ elastic_config_path }}/elasticsearch.yml
          subPath: elasticsearch.yml
        - name: elastic
          mountPath: {{ elastic_config_path }}/jvm.options
          subPath: jvm.options
        - name: elastic
          mountPath: {{ elastic_config_path }}/log4j2.properties
          subPath: log4j2.properties
      volumes:
      - name: elastic
        configMap:
          name: elastic
      nodeSelector:
        role: server
  volumeClaimTemplates:
  - metadata:
      name: elastic-data
    spec:
      accessModes: ["ReadWriteOnce"]
      storageClassName: gluster-heketi
      resources:
        requests:
          storage: {{ elastic_pv_size }}Gi
