services:
  - kafka

file_paths:
  - ['/etc/sysconfig/kafka', 'root:root', '0644']
  - ['/etc/kafka/server.properties', 'root:root', '0644']

dir_paths:
  - /var/log/kafka
  - /data/kafka

packages:
  - java-1.8.0-openjdk-headless
  - kafka
  - kafkacat

listening_ports:
  - 9092

topics:
  - bro-raw
  - bro-network
  - suricata-raw
  - suricata-clean
  - fsf-raw
  - fsf-clean
